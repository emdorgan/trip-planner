<div class="row">
    <div class="col-md-6">
        <h2>Login</h2>
        <form class="login-form custom-login-signup">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="email-login" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password-login" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary custom-btn">Submit</button>
        </form>
    </div>
    <div class="col-md-6">
        <h2>Signup</h2>
        <form class="signup-form custom-login-signup">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="email-signup" placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="password-signup" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary custom-btn">Submit</button>
        </form>
    </div>
</div>

<script src="./js/login.js"></script>